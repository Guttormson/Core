<% title 'Sign up' %>
<div class="page-header">
  <h1>Sign up <small>Participate in club events</small></h1>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => "form-horizontal" }) do |f| %>
  <%= devise_error_messages! %>

  <%= render 'users/name_field', :f => f %>
  <%= render 'users/email_field', :f => f %>
  <%= render 'users/club_field', :f => f %>
  <%= render 'users/sport_ident_field', :f => f %>

  <div class="control-group">
    <%= f.label :referred_from, "Referred by", :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :referred_from, :placeholder => "Optional" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :password, :class => "control-label" %>
    <div class="controls">
      <%= f.password_field :password, :required => true %>
    </div>
  </div>

  <% if show_registration_recaptcha %>
  <div class="control-group">
    <div class="controls">
      <%= recaptcha_tags %>
    </div>
  </div>
  <% end %>

  <div class="form-actions">
    <%= f.submit "Sign up", :class => "btn btn-primary" %>
  </div>
<% end %>

